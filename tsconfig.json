{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES5",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}