{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "/@/*": ["src/*"]
    },
    "sourceMap": true,
    "target": "es2020",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}